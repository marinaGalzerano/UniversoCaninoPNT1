@model Prueba.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="ItemContainer">
<div class="ItemTitle">Detalles</div>
<div class="ItemContent">
    <div class="Images">
        <div class="ActualImage">
            <div><img src=@Html.DisplayFor(model => model.Image)></div>
        </div>
        <div class="Edit_ABM_Buttons">
            <div class="ABM_Button">
            <a asp-action="Index">Volver a la lista</a>
            </div>
            <div class="ABM_Button">
            <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            </div>
        </div>
    </div>
    <span class="Separator"></span>
    <div class="ItemData">
        <div class="ItemTitle">@Html.DisplayFor(model => model.Name)</div>
        <p class="ItemDescription">@Html.DisplayFor(model => model.Descr)</p>
        <div class="ItemPrice">Precio $@Html.DisplayFor(model => model.Price)</div>
    </div>
</div>
</div>
